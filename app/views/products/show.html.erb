<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <br>
      <% if current_user %>
        <%= form_for [@product, @review] do |form| %>
          <h2>Write a Review</h2>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), { include_blank: true }, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :review %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <%= form.submit 'Submit', class: 'btn btn-primary' %>

        <% end %>
      <% end %>
      <br>
      <h2>Reviews</h2>

      <% @product.reviews.reverse.each do |review| %>
        <%= render 'products/review', first_name: review.user.first_name, last_name: review.user.last_name, description: review.description, rating: review.rating %>
      <% end %>
    </div>

  </article>
</section>
